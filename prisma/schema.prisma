generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------------------------
// INFRAESTRUTURA & AUTH
// --------------------------------------------------------

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  name         String
  phone        String?
  avatarUrl    String?   @map("avatar_url")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime? @updatedAt @map("updated_at")

  subscriptions Subscription[]
  userships     WorkspaceUser[]
  refreshTokens RefreshToken[]

  @@map("users")
}

// --------------------------------------------------------
// WORKSPACE (O Coração do Multi-tenant/Casal)
// --------------------------------------------------------

model Workspace {
  id        String   @id @default(uuid())
  name      String
  currency  String   @default("BRL")
  createdAt DateTime @default(now()) @map("created_at")

  users        WorkspaceUser[]
  accounts     Account[]
  categories   Category[]
  transactions Transaction[]
  recurring    RecurringTransaction[]

  @@map("workspaces")
}

model WorkspaceUser {
  id          String   @id @default(uuid())
  workspaceId String   @map("workspace_id")
  userId      String   @map("user_id")
  isDefault   Boolean  @default(false) @map("is_default")
  role        UserRole @default(USER)
  joinedAt    DateTime @default(now()) @map("joined_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("workspace_users")
}

// --------------------------------------------------------
// FINANCEIRO CORE
// --------------------------------------------------------

model Account {
  id          String      @id @default(uuid())
  workspaceId String      @map("workspace_id")
  name        String // "Nubank", "Carteira", "Inter"
  type        AccountType // CHECKING, CASH, CREDIT_CARD, INVESTMENT
  balance     BigInt      @default(0) // Saldo atual cacheado (atualizado via triggers ou app service)
  icon        String?
  color       String?

  // Para cartões de crédito: dia de fechamento e vencimento
  closingDay Int? @map("closing_day")
  dueDay     Int? @map("due_day")

  workspace    Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@map("accounts")
}

model Category {
  id          String          @id @default(uuid())
  workspaceId String?         @map("workspace_id")
  name        String
  icon        String?
  color       String?
  type        TransactionType

  // Auto-relacionamento para Subcategorias
  parentId String?    @map("parent_id")
  parent   Category?  @relation("SubCategories", fields: [parentId], references: [id])
  children Category[] @relation("SubCategories")

  transactions Transaction[]
  workspace    Workspace?    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@map("categories")
}

model Transaction {
  id          String  @id @default(uuid())
  workspaceId String  @map("workspace_id")
  accountId   String  @map("account_id")
  categoryId  String? @map("category_id") // Pode ser null se for transferência

  description String
  amount      BigInt // Negativo para despesa, Positivo para receita
  date        DateTime // Data da competência

  type   TransactionType // INCOME, EXPENSE, TRANSFER
  status TransactionStatus @default(COMPLETED) // PENDING (agendado), COMPLETED

  // Relacionamento com Recorrência (de onde isso veio?)
  recurringId String? @map("recurring_transaction_id")

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  workspace       Workspace             @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  account         Account               @relation(fields: [accountId], references: [id], onDelete: Restrict)
  category        Category?             @relation(fields: [categoryId], references: [id])
  recurringOrigin RecurringTransaction? @relation(fields: [recurringId], references: [id])

  @@index([workspaceId, date])
  @@index([workspaceId, categoryId])
  @@index([workspaceId, type, status])
  @@index([accountId])
  @@map("transactions")
}

model RecurringTransaction {
  id          String  @id @default(uuid())
  workspaceId String  @map("workspace_id")
  accountId   String  @map("account_id")
  categoryId  String? @map("category_id")

  description String
  amount      BigInt

  frequency RecurrenceFrequency // MONTHLY, WEEKLY, YEARLY
  interval  Int                 @default(1) // "A cada 2 meses" -> frequency=MONTHLY, interval=2

  startDate DateTime  @map("start_date")
  endDate   DateTime? @map("end_date") // Se null, é infinito

  lastGenerated DateTime? @map("last_generated") // Controle para o seu script "Lazy" saber quando rodou a última vez

  active Boolean @default(true)

  workspace    Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@map("recurring_transactions")
}

// --------------------------------------------------------
// FATURAMENTO (SAAS)
// --------------------------------------------------------

model Subscription {
  id               String             @id @default(uuid())
  userId           String             @map("user_id") // Quem paga é o User
  planId           String // ID do plano no Gateway (Stripe/Pagar.me)
  status           SubscriptionStatus // ACTIVE, CANCELED, PAST_DUE
  currentPeriodEnd DateTime           @map("current_period_end")

  // Aqui você define limites se quiser (ex: maxWorkspaces)

  user User @relation(fields: [userId], references: [id])

  @@map("subscriptions")
}

// --------------------------------------------------------
// ENUMS
// --------------------------------------------------------

enum UserRole {
  OWNER
  ADMIN
  USER
  VIEWER
}

enum AccountType {
  CHECKING // Conta Corrente
  CASH // Dinheiro
  CREDIT_CARD // Cartão de Crédito
  INVESTMENT // Investimento
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER // Transferência entre contas
}

enum TransactionStatus {
  PENDING // Agendado / Não pago
  COMPLETED // Pago / Confirmado
}

enum RecurrenceFrequency {
  WEEKLY
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String
  expiresIn DateTime @map("expires_in")
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}
